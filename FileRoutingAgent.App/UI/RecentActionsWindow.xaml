<Window x:Class="FileRoutingAgent.App.UI.RecentActionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recent Actions"
        Height="500"
        Width="1200"
        WindowStartupLocation="CenterScreen">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock x:Name="SummaryText"
               FontWeight="SemiBold"
               FontSize="14"
               Margin="0,0,0,8" />

    <DataGrid x:Name="EventsGrid"
              Grid.Row="1"
              IsReadOnly="True"
              AutoGenerateColumns="False"
              CanUserAddRows="False">
      <DataGrid.Columns>
        <DataGridTextColumn Header="When (UTC)" Binding="{Binding AtUtc}" Width="170" />
        <DataGridTextColumn Header="Event" Binding="{Binding EventType}" Width="170" />
        <DataGridTextColumn Header="Project" Binding="{Binding ProjectId}" Width="120" />
        <DataGridTextColumn Header="Source" Binding="{Binding SourcePath}" Width="*" />
        <DataGridTextColumn Header="Destination" Binding="{Binding DestinationPath}" Width="*" />
      </DataGrid.Columns>
    </DataGrid>

    <Button Grid.Row="2"
            HorizontalAlignment="Right"
            Width="100"
            Margin="0,8,0,0"
            Content="Close"
            Click="CloseButton_OnClick" />
  </Grid>
</Window>

