<Window x:Class="FileRoutingAgent.App.UI.RoutingPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="290"
        Width="680"
        ShowInTaskbar="False"
        Topmost="True"
        Title="File Routing">
  <Grid Margin="14">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock x:Name="HeaderText"
               FontWeight="SemiBold"
               FontSize="16"
               Margin="0,0,0,8" />

    <StackPanel Grid.Row="1">
      <TextBlock x:Name="BodyText"
                 TextWrapping="Wrap"
                 Margin="0,0,0,12" />

      <StackPanel x:Name="CategoryPanel" Orientation="Vertical" Margin="0,0,0,4">
        <TextBlock Text="Output Category:" Margin="0,0,0,4" />
        <ComboBox x:Name="CategoryCombo"
                  Height="28"
                  MinWidth="220"
                  MaxWidth="360" />
      </StackPanel>
    </StackPanel>

    <WrapPanel Grid.Row="2" HorizontalAlignment="Right" ItemHeight="30" ItemWidth="125">
      <Button x:Name="MoveButton" Content="Move" Margin="4" Click="MoveButton_OnClick" />
      <Button x:Name="CopyButton" Content="Copy" Margin="4" Click="CopyButton_OnClick" />
      <Button x:Name="PublishCopyButton" Content="Publish Copy" Margin="4" Click="PublishCopyButton_OnClick" />
      <Button x:Name="LeaveButton" Content="Leave in Place" Margin="4" Click="LeaveButton_OnClick" />
      <Button x:Name="SnoozeButton" Content="Snooze 1 Hour" Margin="4" Click="SnoozeButton_OnClick" />
      <Button x:Name="IgnoreFolderButton" Content="Ignore Folder" Margin="4" Click="IgnoreFolderButton_OnClick" />
    </WrapPanel>
  </Grid>
</Window>

