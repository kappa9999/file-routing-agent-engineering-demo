<Window x:Class="FileRoutingAgent.App.UI.EasySetupWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Easy Setup Wizard"
        Width="900"
        Height="760"
        WindowStartupLocation="CenterOwner">
  <Grid Margin="14">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel>
      <TextBlock FontSize="20" FontWeight="SemiBold" Text="Easy Setup Wizard" />
      <TextBlock Margin="0,8,0,0"
                 TextWrapping="Wrap"
                 Text="Fill in the project details below. You can review and edit all folders before applying setup." />
    </StackPanel>

    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,12,0,8">
      <StackPanel>
        <GroupBox Header="Project Basics">
          <Grid Margin="10">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="180" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Project Number / ID</TextBlock>
            <TextBox x:Name="ProjectIdTextBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="8,0,0,8" />

            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Project Name</TextBlock>
            <TextBox x:Name="ProjectNameTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="8,0,0,8" />

            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">Project Root Folder</TextBlock>
            <TextBox x:Name="ProjectRootTextBox" Grid.Row="2" Grid.Column="1" Margin="8,0,0,0" />
            <Button Grid.Row="2" Grid.Column="2" Width="100" Margin="8,0,0,0" Content="Browse..." Click="BrowseProjectRootButton_OnClick" />
          </Grid>
        </GroupBox>

        <GroupBox Header="Review / Edit Folders" Margin="0,10,0,0">
          <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,8">
              <Button Width="220" Content="Auto-Fill Suggested Folders" Click="AutoFillSuggestedFoldersButton_OnClick" />
            </StackPanel>

            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
              </Grid.RowDefinitions>

              <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Watch Root</TextBlock>
              <TextBox x:Name="WatchRootTextBox" Grid.Row="0" Grid.Column="1" Margin="8,0,0,8" />
              <Button Grid.Row="0" Grid.Column="2" Width="100" Margin="8,0,0,8" Content="Browse..." Click="BrowseWatchRootButton_OnClick" />

              <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Working CAD Folder</TextBlock>
              <TextBox x:Name="WorkingCadTextBox" Grid.Row="1" Grid.Column="1" Margin="8,0,0,8" />
              <Button Grid.Row="1" Grid.Column="2" Width="100" Margin="8,0,0,8" Content="Browse..." Click="BrowseWorkingCadButton_OnClick" />

              <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">Working Design Folder</TextBlock>
              <TextBox x:Name="WorkingDesignTextBox" Grid.Row="2" Grid.Column="1" Margin="8,0,0,8" />
              <Button Grid.Row="2" Grid.Column="2" Width="100" Margin="8,0,0,8" Content="Browse..." Click="BrowseWorkingDesignButton_OnClick" />

              <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center">Official CAD Publish</TextBlock>
              <TextBox x:Name="CadPublishTextBox" Grid.Row="3" Grid.Column="1" Margin="8,0,0,8" />
              <Button Grid.Row="3" Grid.Column="2" Width="100" Margin="8,0,0,8" Content="Browse..." Click="BrowseCadPublishButton_OnClick" />

              <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center">Official Plot Sets</TextBlock>
              <TextBox x:Name="PlotSetsTextBox" Grid.Row="4" Grid.Column="1" Margin="8,0,0,8" />
              <Button Grid.Row="4" Grid.Column="2" Width="100" Margin="8,0,0,8" Content="Browse..." Click="BrowsePlotSetsButton_OnClick" />

              <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center">PDF Progress Prints</TextBlock>
              <TextBox x:Name="ProgressPrintsTextBox" Grid.Row="5" Grid.Column="1" Margin="8,0,0,8" />
              <Button Grid.Row="5" Grid.Column="2" Width="100" Margin="8,0,0,8" Content="Browse..." Click="BrowseProgressPrintsButton_OnClick" />

              <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center">PDF Exhibits</TextBlock>
              <TextBox x:Name="ExhibitsTextBox" Grid.Row="6" Grid.Column="1" Margin="8,0,0,8" />
              <Button Grid.Row="6" Grid.Column="2" Width="100" Margin="8,0,0,8" Content="Browse..." Click="BrowseExhibitsButton_OnClick" />

              <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center">PDF Check Prints</TextBlock>
              <TextBox x:Name="CheckPrintsTextBox" Grid.Row="7" Grid.Column="1" Margin="8,0,0,8" />
              <Button Grid.Row="7" Grid.Column="2" Width="100" Margin="8,0,0,8" Content="Browse..." Click="BrowseCheckPrintsButton_OnClick" />

              <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center">PDF Clean Sets</TextBlock>
              <TextBox x:Name="CleanSetsTextBox" Grid.Row="8" Grid.Column="1" Margin="8,0,0,0" />
              <Button Grid.Row="8" Grid.Column="2" Width="100" Margin="8,0,0,0" Content="Browse..." Click="BrowseCleanSetsButton_OnClick" />
            </Grid>
          </StackPanel>
        </GroupBox>

        <GroupBox Header="Recommended Options" Margin="0,10,0,0">
          <StackPanel Margin="10">
            <CheckBox x:Name="IncludeLocalWrongSaveFoldersCheckBox"
                      IsChecked="True"
                      Content="Also monitor Desktop, Downloads, and Documents (Recommended)" />
            <CheckBox x:Name="CreateStandardFoldersCheckBox"
                      Margin="0,8,0,0"
                      IsChecked="True"
                      Content="Create these folders automatically if missing" />
            <CheckBox x:Name="EnableProjectWiseCommandProfileCheckBox"
                      Margin="0,8,0,0"
                      IsChecked="True"
                      Content="Enable ProjectWise command profile template (can stay disabled later)" />
          </StackPanel>
        </GroupBox>
      </StackPanel>
    </ScrollViewer>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Width="120" Margin="0,0,8,0" Content="Cancel" Click="CancelButton_OnClick" />
      <Button Width="180" Content="Apply Setup" Click="ApplySetupButton_OnClick" />
    </StackPanel>
  </Grid>
</Window>
