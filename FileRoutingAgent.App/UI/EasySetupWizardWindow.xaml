<Window x:Class="FileRoutingAgent.App.UI.EasySetupWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Easy Setup Wizard"
        Width="760"
        Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel>
      <TextBlock FontSize="20" FontWeight="SemiBold" Text="Easy Setup Wizard" />
      <TextBlock Margin="0,8,0,0"
                 TextWrapping="Wrap"
                 Text="Use this wizard to set up one project in a few steps. No coding or JSON editing required." />
    </StackPanel>

    <Border Grid.Row="1" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="8" Padding="14" Margin="0,14,0,12">
      <StackPanel>
        <Grid Margin="0,0,0,10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>
          <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Project Number / ID" />
          <TextBox x:Name="ProjectIdTextBox" Grid.Column="1" Margin="8,0,0,0" />
        </Grid>

        <Grid Margin="0,0,0,10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>
          <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Project Name" />
          <TextBox x:Name="ProjectNameTextBox" Grid.Column="1" Margin="8,0,0,0" />
        </Grid>

        <Grid Margin="0,0,0,10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Project Root Folder" />
          <TextBox x:Name="ProjectRootTextBox" Grid.Column="1" Margin="8,0,0,0" />
          <Button Grid.Column="2" Width="92" Margin="8,0,0,0" Content="Browse..." Click="BrowseProjectRootButton_OnClick" />
        </Grid>

        <Border BorderThickness="1" BorderBrush="#E6E6E6" Background="#FAFAFA" CornerRadius="6" Padding="10" Margin="0,8,0,0">
          <StackPanel>
            <CheckBox x:Name="IncludeLocalWrongSaveFoldersCheckBox"
                      IsChecked="True"
                      Content="Also monitor Desktop, Downloads, and Documents (Recommended)" />
            <CheckBox x:Name="CreateStandardFoldersCheckBox"
                      Margin="0,8,0,0"
                      IsChecked="True"
                      Content="Create standard project folders automatically if missing" />
            <CheckBox x:Name="EnableProjectWiseCommandProfileCheckBox"
                      Margin="0,8,0,0"
                      IsChecked="True"
                      Content="Enable ProjectWise command profile template (can stay disabled until needed)" />
          </StackPanel>
        </Border>

        <TextBlock Margin="0,12,0,0"
                   TextWrapping="Wrap"
                   Foreground="#444"
                   Text="This will auto-configure working roots, official CAD/PDF destinations, file types, and recommended defaults." />
      </StackPanel>
    </Border>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Width="120" Margin="0,0,8,0" Content="Cancel" Click="CancelButton_OnClick" />
      <Button Width="180" Content="Apply Setup" Click="ApplySetupButton_OnClick" />
    </StackPanel>
  </Grid>
</Window>
