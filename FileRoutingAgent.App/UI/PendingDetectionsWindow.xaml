<Window x:Class="FileRoutingAgent.App.UI.PendingDetectionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pending Detections"
        Height="520"
        Width="1120"
        WindowStartupLocation="CenterScreen">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock x:Name="SummaryText"
               FontWeight="SemiBold"
               FontSize="14"
               Margin="0,0,0,8" />

    <DataGrid x:Name="PendingGrid"
              Grid.Row="1"
              IsReadOnly="True"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              SelectionMode="Extended"
              SelectionUnit="FullRow">
      <DataGrid.Columns>
        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70" />
        <DataGridTextColumn Header="Detected (UTC)" Binding="{Binding DetectedAtUtc}" Width="170" />
        <DataGridTextColumn Header="Project" Binding="{Binding ProjectId}" Width="120" />
        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="110" />
        <DataGridTextColumn Header="Source" Binding="{Binding SourcePath}" Width="*" />
        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" />
      </DataGrid.Columns>
    </DataGrid>

    <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,8,0,0">
      <Button Width="90" Margin="4" Content="Refresh" Click="RefreshButton_OnClick" />
      <Button Width="120" Margin="4" Content="Retry Selected" Click="RetryButton_OnClick" />
      <Button Width="140" Margin="4" Content="Dismiss Selected" Click="DismissButton_OnClick" />
      <Button Width="120" Margin="4" Content="Open Source" Click="OpenSourceButton_OnClick" />
      <Button Width="90" Margin="4" Content="Close" Click="CloseButton_OnClick" />
    </WrapPanel>
  </Grid>
</Window>

